<!--pages/usercentre/usercentre.wxml-->
<view class="page">

  <view class="page__hd">
    <view class="page__title">用户中心</view>
  </view>

  <view class="page__bd">
    <view class="weui-cells__title">账号信息</view>
    <view class="weui-cells weui-cells_after-title">

      <view class="weui-cell">
        <view class="weui-cell__bd">账号</view>
        <view class="weui-cell__ft"></view>
      </view>

      <view class="weui-cell">
        <view class="weui-cell__bd">手机号</view>
        <view class="weui-cell__ft">说明文字</view>
      </view>

    </view>
  </view>


  <view class="page__bd page__bd_spacing">




    <button class="weui-btn" type="primary" bindtap='goChangePassword'>更改密码</button>

    <button class="weui-btn" type="default" bindtap='changeUser'>切换账号</button>
    
  </view>

</view>